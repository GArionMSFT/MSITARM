      "resources": [
      {
      "apiversion": "2015-10-31",
      "location": "[parameters('AutomationRegion')]",
      "name": "[parameters('AutomationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "tags": {"MSITVersion": "[variables('MSITVersion')]"},
      "comments": "Automation account",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
        "resources": [
          {
            "name": "[variables('External_ExcludeVMNames')]",
            "type": "variables",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Excluded VMs as comma separated list: vm1,vm2,vm3",
              "value": "[concat('\"','\"')]"
            }
          },
          {
            "name": "[variables('External_ResourceGroupNames')]",
            "type": "variables",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Resource groups targeted for Snooze actions",
              "value": "[concat('\"','\"')]"
            }
          },
          {
            "name": "[variables('External_MegaSnooze_Condition')]",
            "type": "variables",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Snooze condition for Azure Alert rule",
              "value": "[concat('\"','LessThan','\"')]"
