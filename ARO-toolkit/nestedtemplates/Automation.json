              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Aggregation operator for the Azure Alert rule over a given time period",
              "value": "[concat('\"','Average','\"')]"
            }
          },
          {
            "name": "[variables('External_MegaSnooze_TimeWindow')]",
            "type": "variables",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Time window the Azure Alert rule will consider",
              "value": "[concat('\"','06:00:00','\"')]"
            }
          },
          {
            "name": "[variables('Internal_AzureSubscriptionId')]",
            "type": "variables",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {
            },
            "properties": {
              "description": "Azure Subscription Id",
              "isEncrypted": 1,
              "type": "string",
              "value": "[concat('\"',subscription().subscriptionId,'\"')]"
            }
          },
          {
            "name": "[variables('azureCredentials')]",
            "type": "credentials",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
            ],
            "tags": {},
            "properties": {
              "description": "Azure Subscription Credentials",
              "password": "[parameters('azureAdminPwd')]",
