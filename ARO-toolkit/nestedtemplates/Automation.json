{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AutomationAccountName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Assign a name for the Automation account"
      }
    },
    "AutomationRegion": {
      "type": "string",
      "defaultValue": "West Europe",
      "allowedValues": [
        "Japan East",
        "East US 2",
        "West Europe",
        "Southeast Asia",
        "South Central US",
        "North Europe",
        "Canada Central",
        "Australia Southeast",
        "Central India",
        "Japan East"
      ],
      "metadata": {
        "description": "Specify the region for your Automation account"
      }
    },
    "newGuid": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Assign a name for the ASR Recovery Vault"
      }
    },
    "azureAdmin": {
      "type": "string",
      "metadata": {
        "description": "Enter your service admin user"
      }
    },
    "azureAdminPwd": {
      "type": "securestring",
      "metadata": {
        "description": "Enter the pwd for the service admin user. The pwd is enrypted during runtime and in the Automation assets"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      }
    }
  },
  "variables": {
    "psModules": {
      "azureRmCompute": {
        "name": "AzureRM.Compute",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.compute.2.9.0.nupkg"
      },     
      "azureRmProfile": {
        "name": "AzureRm.Profile",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.profile.2.8.0.nupkg"
      },
      "azureRmResources": {
        "name": "AzureRm.Resources",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.resources.3.8.0.nupkg"
      },
      "azureRmKeyVault": {
        "name": "AzureRm.KeyVault",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.keyvault.2.8.0.nupkg"
      },
      "azureRmAutomation": {
        "name": "AzureRm.Automation",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.automation.2.8.0.nupkg"
      },
      "azureRmOperationalInsights": {
        "name": "AzureRm.OperationalInsights",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.operationalinsights.2.8.0.nupkg"
      },
      "azureRmSiteRecovery": {
        "name": "AzureRm.SiteRecovery",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.siterecovery.3.7.0.nupkg"
      },
      "azureRmRecoveryServices": {
        "name": "AzureRm.RecoveryServices",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.recoveryservices.2.8.0.nupkg"
      },
      "azureRmBackup": {
        "name": "AzureRm.Backup",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.backup.2.8.0.nupkg"
      },
      "azureRmInsights": {
        "name": "AzureRm.Insights",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.insights.2.8.0.nupkg"
      }
    },
    "runbooks": {
      "Bootstrap_Main": {
        "name": "Bootstrap_Main",
        "version": "1.0.0.0",
        "description": "Configurates Azure Automation account for anything we can't handle in ARM",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Bootstrap_Main.ps1 ', parameters('_artifactsLocationSasToken'))]"
      },
      "AROToolkit_Redbutton_Abort": {
        "name": "AROToolkit_Redbutton_Abort",
        "version": "1.0.0.0",
        "description": "Abort the ARO Toolkit",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/AROToolkit_Redbutton_Abort.ps1 ', parameters('_artifactsLocationSasToken'))]"
      },
      "ScheduleSnooze_ARMVMOptimizationWrapper": {
        "name": "ScheduleSnooze_ARMVMOptimizationWrapper",
        "version": "1.0.0.0",
        "description": "Parallel execution of scheduled snooze actions",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/ScheduleSnooze/ScheduleSnooze_ARMVMOptimizationWrapper.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "ScheduleSnooze_StartOrStopAzureRmVM": {
        "name": "ScheduleSnooze_StartOrStopAzureRmVM",
        "version": "1.0.0.0",
        "description": "Placeholder",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/ScheduleSnooze/ScheduleSnooze_StartOrStopAzureRmVM.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "MegaSnooze_StopAzureRmVM": {
        "name": "MegaSnooze_StopAzureRmVM",
        "version": "1.0.0.0",
        "description": "Runbook to stop indivual ARM VM, called by CreateAlertsForAzureRmVM",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/MegaSnooze_StopAzureRmVM.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "MegaSnooze_CreateAlertsForAzureRmVMWrapper": {
        "name": "MegaSnooze_CreateAlertsForAzureRmVMWrapper",
        "version": "1.0.0.0",
        "description": "Runbook to create alerts for MegaSnooze",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/MegaSnooze_CreateAlertsForAzureRmVMWrapper.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "MegaSnooze_CreateOrDisableAlert": {
        "name": "MegaSnooze_CreateOrDisableAlert",
        "version": "1.0.0.0",
        "description": "Runbook to create or disable alert for megasnooze",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/MegaSnooze_CreateOrDisableAlert.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "MegaSnooze_Disable": {
        "name": "MegaSnooze_Disable",
        "version": "1.0.0.0",
        "description": "Disable the MegaSnooze",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/MegaSnooze_Disable.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "DeleteResourceGroupsWrapper": {
        "name": "DeleteResourceGroupsWrapper",
        "version": "1.0.0.0",
        "description": "This runbook will delete resource groups",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/DeleteRG/DeleteResourceGroupsWrapper.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "DeleteRG": {
        "name": "DeleteRG",
        "version": "1.0.0.0",
        "description": "This runbook will delete resource groups",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/DeleteRG/DeleteRG.ps1', parameters('_artifactsLocationSasToken'))]"
      }
    },
      "Internal_AzureSubscriptionId": "Internal_AzureSubscriptionId",
      "Internal_AROAutomationAccountName": "Internal_AROAutomationAccountName",
      "Internal_AROResourceGroupName": "Internal_AROResourceGroupName",
      "External_ExcludeVMNames": "External_ExcludeVMNames",
      "External_ResourceGroupNames": "External_ResourceGroupNames",     
      "External_MegaSnooze_Condition": "External_MegaSnooze_Condition",       
